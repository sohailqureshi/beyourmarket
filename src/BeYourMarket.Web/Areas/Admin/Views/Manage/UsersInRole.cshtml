@model List<BeYourMarket.Web.Models.ApplicationUser>

  @section Styles {
  }

  @{
    ViewBag.Title = "[[[Users]]]";
  }
  <div class="wraper container-fluid">

    <div class="form-group">
  
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">[[[Users in Role]]]</h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12 table-responsive">
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>[[[Email]]]</th>
                      <th>[[[Name]]]</th>
                      <th>[[[Date Joined]]]</th>
                      <th>[[[Last Access Date]]]</th>
                    </tr>
                  </thead>

                  <tbody>
                    @foreach (var role in Model)
                    {
                      <tr>
                        <td>@role.Email</td>
                        <td>@role.FullName</td>
                        <td>@role.RegisterDate</td>
                        <td>@role.LastAccessDate</td>
                      </tr>
                    }
                  </tbody>
                </table>

                  <a href="@Url.Action("UserRoles", "Manage")" class="btn btn-default"><i class="fa fa-remove"></i> [[[Cancel]]]</a>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  @section Scripts {
  }

